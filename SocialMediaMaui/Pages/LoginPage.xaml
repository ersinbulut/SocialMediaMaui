<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialMediaMaui.Pages.LoginPage"
             xmlns:controls="clr-namespace:SocialMediaMaui.Controls"
             Title="Login"
             Padding="20">

    <ScrollView>
        <Grid 
       RowDefinitions="Auto,Auto,Auto"
       VerticalOptions="Center" 
       RowSpacing="20">
            <Image
           Grid.Row="0"
           HeightRequest="128" 
           Source="social_media.png"/>
            <Label 
           Grid.Row="1"
           FontAttributes="Bold"
           FontSize="25"
           HorizontalOptions="Center"
           Text="Login"
           />
            <VerticalStackLayout Grid.Row="2" Spacing="2">
                <Label Text="Username" Style="{StaticResource formlabel}"/>

                <controls:NoBorderEntry BackgroundColor="LightGoldenrodYellow" Placeholder="Enter username"/>

                <controls:Spacer/>

                <Label Text="Password" Style="{StaticResource formlabel}"/>
                <controls:NoBorderEntry Placeholder="Enter Password" 
                  IsPassword="True"
                  BackgroundColor="LightGoldenrodYellow"/>

                <controls:Spacer/>
                <Button Text="Login" Style="{StaticResource rounded}" />
                <controls:Spacer/>

                <Grid ColumnDefinitions="*, Auto,*" ColumnSpacing="5">
                    <BoxView Grid.Column="0" Style="{StaticResource fadedLine}"/>
                    <Label Grid.Column="1" HorizontalOptions="Center" Text="New User?"/>
                    <BoxView Grid.Column="2" Style="{StaticResource fadedLine}"/>
                </Grid>

                <controls:Spacer/>
                <Button Text="Register" Style="{StaticResource rounded}" />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>