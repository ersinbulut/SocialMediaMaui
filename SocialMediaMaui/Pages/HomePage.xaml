<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SocialMediaMaui.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SocialMediaMaui.Controls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    BackgroundColor="{StaticResource Gray100}">

    <!-- Scrollable Content -->
    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Title Bar -->
            <Grid BackgroundColor="HotPink" Padding="10" ColumnDefinitions="Auto,*,Auto">
                <!-- App Title -->
                <Label
        Grid.Column="0"
        Text="Maui Social"
        FontSize="25"
        FontAttributes="Bold"
        VerticalOptions="Center"
        TextColor="White" />

                <!-- Icons -->
                <Grid Grid.Column="2" ColumnDefinitions="Auto,Auto,Auto" HorizontalOptions="End" VerticalOptions="Center" ColumnSpacing="15">
                    <!-- Add Icon -->
                    <Image
            Grid.Column="0"
            Source="plus.png"
            HeightRequest="25"
            WidthRequest="25"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

                    <!-- Notification Icon with Dot -->
                    <Grid Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image
                Source="bell.png"
                HeightRequest="25"
                WidthRequest="25"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
                        <!-- Notification Dot -->
                        <Ellipse
                Fill="Black"
                HeightRequest="10"
                WidthRequest="10"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="0,0,2,0" />
                    </Grid>

                    <!-- User Icon -->
                    <Image
            Grid.Column="2"
            Source="user.png"
            HeightRequest="25"
            WidthRequest="25"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
                </Grid>
            </Grid>

            <!-- Posts Section -->
            <VerticalStackLayout Spacing="10" Padding="10">

                <!-- Single Post -->
                <Border Padding="8" BackgroundColor="White" StrokeThickness="0" StrokeShape="RoundRectangle 10">
                    <Grid RowDefinitions="Auto,250,Auto,Auto" RowSpacing="8">

                        <!-- User Info -->
                        <Grid ColumnDefinitions="40,*,Auto" Padding="0,8">
                            <Border
                                Grid.Column="0"
                                HeightRequest="40"
                                WidthRequest="40"
                                BackgroundColor="LightGoldenrodYellow"
                                StrokeShape="RoundRectangle 20">
                                <Image
                                    Source="user.png"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center" />
                            </Border>
                            <VerticalStackLayout Grid.Column="1" Spacing="0" Padding="5,0">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="Abhay Prince" />
                                <Label
                                    FontSize="12"
                                    Text="04 Jan 2025"
                                    TextColor="Gray" />
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Post Image -->
                        <Border Grid.Row="1" StrokeThickness="0">
                            <Image
                                Source="bird.jpg"
                                Aspect="AspectFill"
                                HeightRequest="250" />
                        </Border>

                        <!-- Post Text -->
                        <Label
                            Grid.Row="2"
                            FontSize="15"
                            Text="Some random post text will go here"
                            Padding="8,0"
                            TextColor="Black" />

                        <!-- Post Actions -->
                        <Grid Grid.Row="3" ColumnDefinitions="*,*,*,*" Padding="8,0">
                            <HorizontalStackLayout Grid.Column="0" Spacing="5" HorizontalOptions="Center">
                                <Image
                                    Source="heart.png"
                                    HeightRequest="20"
                                    WidthRequest="20" />
                                <Label Text="Like" FontSize="12" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Column="1" Spacing="5" HorizontalOptions="Center">
                                <Image
                                    Source="comment.png"
                                    HeightRequest="20"
                                    WidthRequest="20" />
                                <Label Text="Comment" FontSize="12" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Column="2" Spacing="5" HorizontalOptions="Center">
                                <Image
                                    Source="bookmark.png"
                                    HeightRequest="20"
                                    WidthRequest="20" />
                                <Label Text="Save" FontSize="12" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Column="3" Spacing="5" HorizontalOptions="Center">
                                <Image
                                    Source="share.png"
                                    HeightRequest="20"
                                    WidthRequest="20" />
                                <Label Text="Share" FontSize="12" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Additional Post -->
                <Border Padding="8" BackgroundColor="White" StrokeThickness="0" StrokeShape="RoundRectangle 10">
                    <Grid RowDefinitions="Auto,250,Auto,Auto" RowSpacing="8">

                        <!-- User Info -->
                        <Grid ColumnDefinitions="40,*,Auto" Padding="0,8">
                            <Border
                                Grid.Column="0"
                                HeightRequest="40"
                                WidthRequest="40"
                                BackgroundColor="LightGoldenrodYellow"
                                StrokeShape="RoundRectangle 20">
                                <Image
                                    Source="user.png"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center" />
                            </Border>
                            <VerticalStackLayout Grid.Column="1" Spacing="0" Padding="5,0">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="Ersin Bulut" />
                                <Label
                                    FontSize="12"
                                    Text="04 Jan 2025"
                                    TextColor="Gray" />
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Post Image -->
                        <Border Grid.Row="1" StrokeThickness="0">
                            <Image
                                Source="fantasy.jpg"
                                Aspect="AspectFill"
                                HeightRequest="250" />
                        </Border>

                        <!-- Post Text -->
                        <Label
                            Grid.Row="2"
                            FontSize="15"
                            Text="Another random post text will go here"
                            Padding="8,0"
                            TextColor="Black" />

                        <!-- Post Actions -->
                        <Grid Grid.Row="3" ColumnDefinitions="*,*,*,*" Padding="8,0">
                            <HorizontalStackLayout Grid.Column="0" Spacing="5" HorizontalOptions="Center">
                                <Image
                                    Source="heart.png"
                                    HeightRequest="20"
                                    WidthRequest="20" />
                                <Label Text="Like" FontSize="12" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Column="1" Spacing="5" HorizontalOptions="Center">
                                <Image
                                    Source="comment.png"
                                    HeightRequest="20"
                                    WidthRequest="20" />
                                <Label Text="Comment" FontSize="12" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Column="2" Spacing="5" HorizontalOptions="Center">
                                <Image
                                    Source="bookmark.png"
                                    HeightRequest="20"
                                    WidthRequest="20" />
                                <Label Text="Save" FontSize="12" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Column="3" Spacing="5" HorizontalOptions="Center">
                                <Image
                                    Source="share.png"
                                    HeightRequest="20"
                                    WidthRequest="20" />
                                <Label Text="Share" FontSize="12" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
